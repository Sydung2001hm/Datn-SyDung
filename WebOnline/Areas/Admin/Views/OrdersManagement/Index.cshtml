@model IEnumerable<BookShopOnline_ProjectSem3.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                @*<p>
                    @Html.ActionLink("Create New", "Create")
                </p>*@
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>Mã đặt hàng #</th>
                                        <th>Ngày tạo ra</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.OrderID">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.OrderID)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalPrice)
                                            </td>


                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Status)*@
                                                <a href="#">@(item.Status?"Completed Delivery":"Delivery...")</a>
                                            </td>

                                            <td>
                                                @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }) |
                                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.OrderID }) |
                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.OrderID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.OrderID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


