@model BookShopOnline_ProjectSem3.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<br />
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Cửa hàng trực tuyến</a></li>
                        <li><a href="#" class="active">Đăng ký</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- user-login-area-start -->
<div class="user-login-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Đăng ký</h2>
                </div>
            </div>
            <form action="/UserClient/Register" method="post" id="registerform">
                <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                    <div class="billing-fields">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">

                                    <label>Họ<span>*</span></label>
                                    <input type="text" @*placeholder="First Name"*@ name="FirstName" >

                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">

                                    <label>Tên<span>*</span></label>
                                    <input type="text" @*placeholder="Last Name"*@ name="LastName" >

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">

                                    <label>Địa chỉ Email<span>*</span></label>
                                    <input type="text" placeholder="abc@gmail.com" name="Mail" >

                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">

                                    <label>Số điện thoại<span>*</span></label>
                                    <input type="text" @*placeholder="Phone Number*@" name="PhoneNumber">

                                </div>
                            </div>
                        </div>

                        <div class="single-register">

                            <label>Địa chỉ<span>*</span></label>
                            <input type="text"  name="Address">

                        </div>
                        <div class="single-register">

                            <label>Tên người dùng<span>*</span></label>
                            <input type="text"  name="UserName">

                        </div>

                        <div class="single-register">

                            <label>Mật khẩu<span>*</span></label>
                            <input type="password"  name="Password" id="Password">

                        </div>
                        <div class="single-register">

                            <label>Xác nhận mật khẩu<span>*</span></label>
                            <input type="password" @*placeholder="x"*@ name="ConfirmPassword">

                        </div>
                        @*<div class="single-register single-register-3">
                            <div class="form-group">
                                <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                                <label class="inline">I agree <a href="#">Terms & Condition</a></label>
                            </div>
                        
                        </div>*@
                        <div>
                            @*<a href="javascript:{}" onclick="document.getElementById('registerform').submit();">Register</a>*@
                            @*<button>Register</button>*@
                            <input type="submit" value="Đăng ký" class="register-btn" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

