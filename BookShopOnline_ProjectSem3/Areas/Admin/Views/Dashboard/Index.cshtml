
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-gradient-primary text-white text-center card-shadow-primary">
                    <div class="card-body">
                        <h6 class="font-weight-normal">Các sản phẩm </h6>
                        <h2 class="mb-0">@ViewBag.CountProduct</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-gradient-danger text-white text-center card-shadow-danger">
                    <div class="card-body">
                        <h6 class="font-weight-normal">Đặt hàng</h6>
                        <h2 class="mb-0">@ViewBag.CountOrder</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-gradient-warning text-white text-center card-shadow-warning">
                    <div class="card-body">
                        <h6 class="font-weight-normal">khách hàng</h6>
                        <h2 class="mb-0">@ViewBag.CountCustomer</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-gradient-info text-white text-center card-shadow-info">
                    <div class="card-body">
                        <h6 class="font-weight-normal">Nhà tuyển dụng</h6>
                        <h2 class="mb-0">@ViewBag.CountEmployee</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body pb-0">
                        <h4 class="card-title">Daily Sales</h4>
                        <div class="d-flex justify-content-between justify-content-lg-start flex-wrap">
                            <div class="mr-5 mb-2">
                                <h3>
                                   1223
                                </h3>
                                <h6 class="font-weight-normal mb-0">
                                    Bán hàng trực tuyến
                                </h6>
                            </div>
                            <div class="mb-2">
                                <h3>
                                   2224
                                </h3>
                                <h6 class="font-weight-normal mb-0">
                                    Bán hàng tại cửa hàng
                                </h6>
                            </div>
                        </div>
                    </div>
                    @*chart*@
                    <div class="card-body d-flex align-items-end p-0">
                        <div class="mt-auto w-100">
                            <div id="sales-legend" class="chartjs-legend mt-2 mb-4"></div>
                            <canvas id="chart-sales"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>



    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->

</div>