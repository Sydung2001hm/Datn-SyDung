@model IEnumerable<BookShopOnline_ProjectSem3.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div>
            <h2>Bảng dữ liệu nhân viên</h2>
        </div>
        <div class="card">
            <div class="card-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>Tên #</th>
                                        <th>Email </th>
                                        <th>Điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Giới tính</th>
                                        <th>Vai trò</th>
                                        <th>Trạng thái</th>
                                        <th>Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.EmployeeID">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                          
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Status)*@
                                                <a href="#" >@(item.Status?"Online":"Offline")</a>
                                            </td>
                                            <td>
                                                
                                                @Html.ActionLink("Chỉnh sửa ", "Edit", new { id = item.EmployeeID }) |
                                                @Html.ActionLink("Chi tiết", "Details", new { id = item.EmployeeID }) |
                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })*@
                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.EmployeeID }, new AjaxOptions
                                                {
                                                    Confirm="Do you want to delete this record ?",
                                                    OnComplete = "$('#row_"+ item.EmployeeID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



