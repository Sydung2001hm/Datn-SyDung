@model IEnumerable<BookShopOnline_ProjectSem3.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    @*<p>
                        @Html.ActionLink("Create New", "Create")
                    </p>*@
                    <br />
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Mã đặt hàng #</th>
                                            <th>Tên sản phẩm </th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                            <th>Tên tài khoản</th>
                                            <th>Hoạt động #</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr id="row_@item.OrderDetailsID">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.OrderID)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Book.BookName)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Username)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.OrderDetailsID }) |


                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.OrderDetailsID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.OrderDetailsID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



