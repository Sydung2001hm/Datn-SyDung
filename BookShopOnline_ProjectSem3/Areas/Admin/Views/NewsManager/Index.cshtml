@model IEnumerable<BookShopOnline_ProjectSem3.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>Tiêu đề #</th>
                                        <th>Hình ảnh </th>
                                        <th>Ngày tạo ra</th>
                                        <th>Hoạt động #</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.NewsID">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                <img src="~/UploadImageNews/@item.Image" width="100" height="100" />
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.NewsID }) |
                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.NewsID })*@

                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.NewsID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.NewsID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




