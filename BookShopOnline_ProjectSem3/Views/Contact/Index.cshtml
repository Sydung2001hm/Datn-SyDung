@model BookShopOnline_ProjectSem3.Models.Feedback
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<br />
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Shop Online</a></li>
                        <li><a href="#" class="active">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- googleMap-area-start -->
<div class="map-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="googleMap"></div>
            </div>
        </div>
    </div>
</div>
<!-- googleMap-end -->
<!-- contact-area-start -->
<div class="contact-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="contact-info">
                    <h3>Thông tin liên hệ</h3>
                    <ul>
                        <li>
                            <i class="fa fa-map-marker"></i>
                            <span>Địa chỉ: </span>
                            99 Bắc Ninh
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i>
                            <span>Số điện thoại: </span>
                            (+84) 0562948236
                        </li>
                        <li>
                            <i class="fa fa-mobile"></i>
                            <span>Email: </span>
                            <a href="#">nguyensydungnvc@gmail.com</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="contact-form">
                    <h3><i class="fa fa-envelope-o"></i>Để lại lời nhắn</h3>
                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="single-form-3">
                                    @Html.Label("Tên")
                                    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="single-form-3">
                                    @Html.Label("Email")
                                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="single-form-3">
                                    @Html.Label("Số điện thoại")
                                    @Html.TextBoxFor(model => model.Phone, new { placeholder = "Phone" })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="single-form-3">
                                    @Html.Label("Miêu tả")
                                    @Html.TextAreaFor(model => model.Description, new { placeholder = "Message" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    <br>
                                    <button class="submit" type="submit">Gửi tin nhắn</button>
                                </div>
                            </div>
                        </div>
                    }
                    <p class="form-messege">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact-area-end -->
